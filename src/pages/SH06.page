<apex:page cache="false" standardController="Transaction__c" showHeader="false" applyHtmlTag="false" docType="html-5.0" renderAs="pdf">
    <!-- note standard controller will change -->
    <!--  Page to render SH06 pdf -->
    <html>

    <head>
        <style>
        /* Page Configuration */
        
        @page {
            size: A4;
            margin: 25mm;
            @bottom-right {
                content: "Page: " counter(page);
            }
        }
        /* Preventing page break inside signatores block */
        
        .page-break {
            display: block;
            page-break-inside: avoid;
        }
        
        body {
            font-family: Arial Unicode MS;
            font-size: 14px;
        }
        
        .warningText {
            text-align: justify;
        }
        
        .officer {
            font-family: "Sans-Serif";
            font-weight: bold;
        }
        
        h3,
        h4 {
            font-family: "Sans-Serif";
            /* is not possible to set bold with font-family Arial*/
        }
        
        h1,
        h2,
        h4 {
            margin: 0px;
        }
        
        p {
            margin: 0px;
            padding: 0px;
        }
        
        .persoStyle {
            font-weight: bold;
            font-size: 20px;
            position: top-right;
        }
        
        .primary_header {
            width: 100%;
            height: 100% clear: left;
        }
        
        .headerText {
            font-family: "Sans-Serif";
            font-weight: 700;
            font-style: bold;
            font-size: 60px
        }
        
        .HeaderText2 {
            font-family: "Sans-Serif";
            font-weight: 700;
            font-style: bold;
            font-size: 18px
        }
        
        #rectangle {
            float: right;
            width: 350px;
            padding-left: 4px;
            padding-top: 4px;
            height: 50px;
            background: black;
        }
        
        .PDFBody {
            font-family: "Sans-Serif";
            overflow: auto;
        }
        
        #rectangle2 {
            width: 346px;
            height: 46px;
            padding-right: 0px;
            padding-left: px;
            background: white;
        }
        
        .container {
            background-color: #FFFFFF;
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            border-bottom-width: 0px;
            padding-left: 0px;
            padding-top: 0px;
            padding-right: 0px;
            padding-bottom: 0px;
        }
        
        .col1 {
            width: 35%;
        }
        
        .col2 {
            width: 5%;
        }
        
        .col3 {
            width: 60%;
        }
        
        .panelGrid {
            margin-top: 30px;
            page-break-inside: avoid;
            table-layout: fixed;
            width: 100%;
        }
        </style>
    </head>

    <body>
        <div style="container">
            <header>
                <div class="primary_header">
                    <p>
                        <img src="{!$Resource.Logo}" /> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                        <strong class="headerText">SH06</strong>
                        <strong class="HeaderText2">(ef)</strong>
                    </p>
                </div>
                <div id="test" class="PDFBody">
                    <div id="rectangle">
                        <div id="rectangle2">
                            <p style=" padding-top: 10px; font-family:Sans-Serif; font-weight: 500; text-align:center; font-style:bold;font-size:25px;">Statement of Capital</p>
                        </div>
                    </div>
                </div>
            </header>
            <br/>
            <br/>
            <br/>
            <div>
                <!-- Company Details -->
                <apex:panelGrid columns="2" width="70%">
                    <apex:outputLabel >{!IF(Transaction__c.isLLP__c, 'LLP', 'Company')} Name:</apex:outputLabel>
                    <apex:outputText value="{!Transaction__c.CompanyName__c}" />
                    <apex:outputLabel >{!IF(Transaction__c.isLLP__c, 'LLP', 'Company')} Number:</apex:outputLabel>
                    <apex:outputText value="{!Transaction__c.CompanyNumber__c}" />
                </apex:panelGrid>
            </div>
            <br/>
            <hr/>
            <!-- warning message -->
            <div class="warningText">
                <br />
                <p style="text-align:center; font-weight: 300; font-size: 20px;">Important notice for all interested parties</p>
                <br />
                <p>SHARE CAPITAL IMPORTANT NOTICE CONTENT HERE</p>
                <br />
                <hr/>
            </div>
        </div>
    </body>

    </html>
</apex:page>