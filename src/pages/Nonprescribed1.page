<apex:page cache="false" title="NonPrescribed" showHeader="false" sidebar="false" standardStylesheets="false" controller="nonPrescribed" docType="html-5.0">
    <apex:composition template="TransactionPageTemplate">
        <apex:define name="content">
            <apex:form >
                <h1 class="heading-xlarge">Which file do you want to submit?</h1>
                <div class="form-group">
                    <fieldset>
                        <label class="block-label" for="radio-1">
                            <input id="radio-1" type="radio" name="radio-group" value="" /> PTF
                        </label>
                        <label class="block-label" for="radio-2">
                            <input id="radio-2" type="radio" name="radio-group" value="" /> Auditor's letter of resignation
                        </label>
                        <label class="block-label" for="radio-3">
                            <input id="radio-3" type="radio" name="radio-group" value="" /> Memorandum and Articles of Association
                        </label>
                        <label class="block-label" for="radio-6" data-target="">
                            <input id="radio-6" type="radio" name="radio-group" value="" /> Capital SS
                        </label>
                    </fieldset>
                </div>
                <div class='form-group'>
                    <apex:commandButton styleClass="govuk-button" action="{!nextAction}" value="Continue" />
                    <br/>
                    <br/>
                    <apex:commandLink action="{!previousAction}" value="Previous" />
                </div>
            </apex:form>
        </apex:define>
    </apex:composition>
</apex:page>